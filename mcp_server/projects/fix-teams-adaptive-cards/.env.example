# Environment variables for Teams Adaptive Cards Fixer
# Copy this file to .env and fill in your Azure AD app registration details

# Azure AD App Registration Details
CLIENT_ID=your_client_id_here
CLIENT_SECRET=your_client_secret_here
TENANT_ID=your_tenant_id_here
REDIRECT_URI=http://localhost:8080/auth/callback

# Optional: Logging level
LOG_LEVEL=INFO

# Optional: Teams API settings
GRAPH_API_BASE=https://graph.microsoft.com/v1.0
SCOPES=https://graph.microsoft.com/Chat.ReadWrite https://graph.microsoft.com/User.Read
